{% extends "base.jinja2" %}

{% block content %}
  <div class="wrap container-fluid">
    <form action="" method="post">
      {{ form.hidden_tag() }}
      <div class="form-group">
        {{ form.username.label }}
        {{ form.username(class_="form-control", size=32) }}<br>
        {% for error in form.username.errors %}
          <div class="invalid-feedback">{{ error }}</div>
        {% endfor %}
      </div>
      <div class="form-group">
        {{ form.password.label }}
        {{ form.password(class_="form-control",size=32) }}<br>
        {% for error in form.password.errors %}
          <div class="invalid-feedback">{{ error }}</div>
        {% endfor %}
      </div>
      <div class="form-check form-switch">
        {{ form.remember_me.label }}
        {{ form.remember_me(class_="form-check-input", role_="switch") }}
      </div>
      <div class="form-group">{{ form.submit(class_="form-control btn btn-outline-light") }}</div>
    </form>
  </div>
{% endblock%}